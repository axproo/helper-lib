{
    "name": "axproo/helper-lib",
    "version": "1.0.0",
    "description": "Bibliothèque Axproo des helpers réutilisables pour CI4 ou PHP native",
    "type": "composer-plugin",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "composer-plugin-api": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Axproo\\HelperLib\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Christian DJOMOU",
            "email": "developper@axproo.com"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "class": "Axproo\\HelperLib\\Plugin"
    },
    "scripts": {
        "post-install-cmd": [
            "Axproo\\HelperLib\\Installer::install"
        ],
        "post-update-cmd": [
            "Axproo\\HelperLib\\Installer::install"
        ]
    },
    "prefer-stable": true,
    "require-dev": {
        "composer/composer": "^2.7"
    }
}
